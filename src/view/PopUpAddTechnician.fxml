<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label alignment="CENTER" text="Please fill out the fields below to add a Technician" BorderPane.alignment="CENTER" />
   </top>
   <padding>
      <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
   </padding>
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <TextField fx:id="nameTextField" promptText="name" BorderPane.alignment="CENTER" />
            <Label text="What Equipment is this Technician trained for?" />
            <MenuButton fx:id="equipmentMenuButton" mnemonicParsing="false" text="Inventory" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="warningLabel" prefHeight="53.0" prefWidth="530.0" />
            <Button mnemonicParsing="false" onAction="#handle" text="Add Technician" BorderPane.alignment="CENTER" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
